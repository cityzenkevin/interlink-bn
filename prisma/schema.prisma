// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum STATE_ENUM {
  FRESH
  VERIFIED
  DISABLED
  DELETED
}

enum ROLE_ENUM {
  ADMIN
  STUDENT
  LECTURER
  ORGANIZATION
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  telephone String? @unique
  username  String? 
  gender String?
  password String
  role ROLE_ENUM @default(STUDENT)
  state STATE_ENUM @default(FRESH)
  students Student[]
  lecturers Lecturer[]
  organizations Organization[]

}

model Student {
  id    Int     @default(autoincrement()) @id
  user User @relation(fields: [userId], references: [id])
  userId Int
  school String?
  classId Int
}

model Lecturer {
  id    Int     @default(autoincrement()) @id
  user User @relation(fields: [userId], references: [id])
  userId Int
  school String?
  classId Int
}

model Organization {
  id    Int     @default(autoincrement()) @id
  name String
  address String
  telephone String
  email String
  website String
  logo String
  userId Int
  manager User @relation(fields: [userId], references: [id])  
  internships Internship[]
}

model Internship {
  id    Int     @default(autoincrement()) @id
  organization Organization @relation(fields: [organizationId], references: [id])
  organizationId Int
  title String
  description String
  duration String
}

